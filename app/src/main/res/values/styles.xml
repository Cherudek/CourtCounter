<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#00b36a</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#00b36a</item>


    </style>

    <!-- Styles for Buttons + and - -->

    <style name="PlusMinusButtonStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="StatisticsBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Statistics Style for Goals, Penalties, Fouls, Shots and Saves Layout-->

    <style name="GameStats">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gameStats</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>

    </style>

    <!-- Team A Name Style -->

    <style name="TeamA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/team_a</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">text|textCapSentences</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/teamAandB</item>
        <item name="android:textSize">24sp</item>

    </style>

    <!-- Team B Name Style -->

    <style name="TeamB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/team_b</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/teamAandB</item>
    </style>

    <!-- Style for Score Team A and B -->

    <style name="teamABscore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/TeamABscore</item>
        <item name="android:textColor">@color/gameStats</item>


    </style>


</resources>